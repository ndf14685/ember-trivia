<div class="row">
	<div class="input-field col s3">
		{{input value=category class="validate" id="title" length="60"}}
		<label for="question">Categoría</label>
	</div>
</div>

<div class="row">
	{{md-btn icon='mdi-content-send' iconPosition='right' text='Agregar Categoría' action='addCategory'}}
</div>


<div class="row">
	<div class="col s3">
		{{input-select data=model.categories}}
	</div>

	<div class="input-field col s3">
		{{input value=question class="validate" id="question" length="60"}}
		<label for="question">Pregunta</label>
	</div>

	<div class="input-field col s3">
		{{input value=answer class="validate" id="answer" length="60"}}
		<label for="answer">Respuesta</label>
	</div>	
</div>

<div class="row">
	{{md-btn icon='mdi-content-send' iconPosition='right' text='Agregar Pregunta' action='save'}}
</div>


<div class="row">
	{{list-data modelName='item' store=store}}
</div>

{{outlet}}
