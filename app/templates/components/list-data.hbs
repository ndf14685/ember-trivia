<div class="row">
	{{#if controllerContent.isPending}}
		<div class="center">
		  <div class="preloader-wrapper big active">
		    <div class="spinner-layer spinner-blue-only">
		      <div class="circle-clipper left">
		        <div class="circle"></div>
		      </div>
		    </div>
		  </div>
		 </div>
	{{else}}
        <h4>Responde las preguntas</h4>
		{{#each content as |item|}}
			{{list-data-item content=item}}
		{{else}}
			No se agregaron preguntas
		{{/each}}		
	{{/if}}

	<div class="row">
		<a class="waves-effect waves-light btn" {{action 'checkQuestions'}}>Revisar</a>
		<a class="waves-effect waves-light btn" {{action 'showAnswers'}}>Mostrar Respuestas</a>
	</div>

</div>

{{yield}}
